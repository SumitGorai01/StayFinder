<% layout("/layouts/boilerplate") %>

<style>
  body {
    background: #f8f9fa;
  }

  .login-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    padding: 2.5rem 2rem;
    transition: all 0.3s ease;
  }

  .login-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
  }

  .login-header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .login-header h3 {
    font-weight: 700;
    color: #212529;
  }

  .login-header p {
    color: #6c757d;
    font-size: 0.95rem;
  }

  .form-label {
    font-weight: 500;
    color: #343a40;
  }

  .form-control {
    border-radius: 10px;
    padding: 0.6rem 1rem;
    font-size: 1rem;
  }

  .form-control:focus {
    border-color: #fe424d;
    box-shadow: 0 0 0 0.2rem rgba(254, 66, 77, 0.25);
  }

  .btn-login {
    background-color: #fe424d;
    border: none;
    border-radius: 10px;
    padding: 0.6rem 1rem;
    font-weight: 500;
    width: 100%;
    transition: background 0.3s ease;
  }

  .btn-login:hover {
    background-color: #e93c46;
  }

  .no-account {
    text-align: center;
    margin-top: 1rem;
    color: #6c757d;
  }

  .no-account a {
    color: #fe424d;
    text-decoration: none;
    font-weight: 500;
  }

  .no-account a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .login-card {
      padding: 2rem 1.5rem;
    }
  }

  /* Optional fade-in animation */
  .login-card {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="login-card">

        <!-- Header -->
        <div class="login-header">
          <h3>Welcome Back</h3>
          <p>Log in to continue your journey with Wanderlust.</p>
        </div>

        <!-- Login Form -->
        <form action="/login" method="POST" class="needs-validation" novalidate>

          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              name="username"
              id="username"
              class="form-control"
              placeholder="Enter your username"
              required
            />
          </div>

          <div class="mb-4">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              name="password"
              id="password"
              class="form-control"
              placeholder="Enter your password"
              required
            />
          </div>

          <button class="btn btn-login" type="submit">Login</button>

        </form>

        <!-- Signup Redirect -->
        <div class="no-account">
          Donâ€™t have an account? <a href="/signup">Sign up</a>
        </div>

      </div>
    </div>
  </div>
</div>
