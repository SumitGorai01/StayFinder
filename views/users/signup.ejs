<% layout("/layouts/boilerplate") %>

<style>
  body {
    background: #f8f9fa;
  }

  .signup-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    padding: 2.5rem 2rem;
    transition: all 0.3s ease;
  }

  .signup-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
  }

  .signup-header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .signup-header h3 {
    font-weight: 700;
    color: #212529;
  }

  .signup-header p {
    color: #6c757d;
    font-size: 0.95rem;
  }

  .form-label {
    font-weight: 500;
    color: #343a40;
  }

  .form-control {
    border-radius: 10px;
    padding: 0.6rem 1rem;
    font-size: 1rem;
  }

  .form-control:focus {
    border-color: #fe424d;
    box-shadow: 0 0 0 0.2rem rgba(254, 66, 77, 0.25);
  }

  .btn-signup {
    background-color: #fe424d;
    border: none;
    border-radius: 10px;
    padding: 0.6rem 1rem;
    font-weight: 500;
    width: 100%;
    transition: background 0.3s ease;
  }

  .btn-signup:hover {
    background-color: #e93c46;
  }

  .already-account {
    text-align: center;
    margin-top: 1rem;
    color: #6c757d;
  }

  .already-account a {
    color: #fe424d;
    text-decoration: none;
    font-weight: 500;
  }

  .already-account a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .signup-card {
      padding: 2rem 1.5rem;
    }
  }
</style>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="signup-card">

        <!-- Header -->
        <div class="signup-header">
          <h3>Create Your Account</h3>
          <p>Join Wanderlust and start exploring unique destinations today.</p>
        </div>

        <!-- Signup Form -->
        <form action="/signup" method="POST" class="needs-validation" novalidate>

          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              name="username"
              id="username"
              class="form-control"
              placeholder="Enter your username"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              name="email"
              id="email"
              class="form-control"
              placeholder="Enter your email address"
              required
            />
          </div>

          <div class="mb-4">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              name="password"
              id="password"
              class="form-control"
              placeholder="Create a password"
              required
            />
          </div>

          <button class="btn btn-signup" type="submit">Sign Up</button>

        </form>

        <!-- Already have an account -->
        <div class="already-account">
          Already have an account? <a href="/login">Log in</a>
        </div>

      </div>
    </div>
  </div>
</div>
