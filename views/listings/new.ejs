<% layout("/layouts/boilerplate") %>

<style>
  body {
    background: #f8f9fa;
    font-family: "Inter", sans-serif;
  }

  .form-wrapper {
    background: #ffffff;
    border-radius: 18px;
    padding: 2.5rem 3rem;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
    margin: 3rem auto;
    transition: all 0.3s ease;
  }

  .form-wrapper:hover {
    box-shadow: 0 10px 35px rgba(0, 0, 0, 0.1);
  }

  h3 {
    font-weight: 700;
    color: #212529;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .form-label {
    font-weight: 600;
    color: #333;
    margin-bottom: 0.4rem;
  }

  .form-control {
    border-radius: 12px;
    padding: 0.65rem 0.9rem;
    border: 1px solid #ced4da;
    transition: all 0.25s ease;
    font-size: 0.95rem;
  }

  .form-control:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
  }

  textarea.form-control {
    min-height: 120px;
    resize: vertical;
  }

  input[type="file"].form-control {
    padding: 0.45rem;
    font-size: 0.9rem;
  }

  .btn.add-btn {
    background: #0d6efd;
    border: none;
    border-radius: 10px;
    font-weight: 600;
    padding: 0.7rem 2rem;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .btn.add-btn:hover {
    background: #0b5ed7;
    transform: translateY(-2px);
    box-shadow: 0 6px 14px rgba(13, 110, 253, 0.25);
  }

  .btn.add-btn:active {
    transform: scale(0.98);
  }

  .invalid-feedback,
  .valid-feedback {
    font-size: 0.85rem;
  }

  .form-section {
    margin-bottom: 1.5rem;
  }

  @media (max-width: 768px) {
    .form-wrapper {
      padding: 1.5rem;
      margin: 1.5rem;
    }
  }
</style>

<div class="row mt-3">
  <div class="col-10 offset-1 col-md-8 offset-md-2">
    <div class="form-wrapper">
      <h3><i class="fa-solid fa-circle-plus me-2 text-primary"></i>Create a New Listing</h3>

      <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"> 
        <div class="form-section mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]" 
            placeholder="Add a catchy title"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good!</div>
        </div>

        <div class="form-section mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            class="form-control"
            placeholder="Describe your property..."
            required
          ></textarea>
        </div>

        <div class="form-section mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input
            name="listing[image]"
            type="file"
            class="form-control"
            accept="image/*"
          />
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="price" class="form-label">Price (â‚¹)</label>
            <input
              name="listing[price]" 
              placeholder="1200"
              type="number" 
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid price.</div>
          </div>

          <div class="col-md-8 mb-3">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              placeholder="India"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid country.</div>
          </div>
        </div>

        <div class="form-section mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            placeholder="Ranchi, Jharkhand"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid location.</div>
        </div>

        <div class="text-center">
          <button class="btn add-btn mt-3">
            <i class="fa-solid fa-plus me-2"></i> Add Listing
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
