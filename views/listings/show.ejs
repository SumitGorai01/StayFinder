<% layout("/layouts/boilerplate") %>

<style>
  body {
    background: #f8f9fa;
    font-family: "Inter", sans-serif;
  }

  .show-card {
    border-radius: 15px;
    box-shadow: 0 6px 18px rgba(0,0,0,0.1);
    overflow: hidden;
    margin-bottom: 2rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    padding: 1rem;
  }

  .show-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
  }

  .show-img {
    width: 100%;
    height: 350px;
    object-fit: cover;
  }

  .card-body p {
    margin-bottom: 0.6rem;
    font-size: 0.95rem;
    color: #555;
  }

  .card-body p strong {
    color: #212529;
  }

  .edit-btn, .btn-dark {
    border-radius: 8px;
    padding: 0.5rem 1.2rem;
    margin-right: 0.5rem;
    transition: all 0.3s ease;
  }

  .edit-btn:hover, .btn-dark:hover {
    transform: translateY(-2px);
  }

  .review-card {
    border-radius: 12px;
    box-shadow: 0 3px 12px rgba(0,0,0,0.08);
    margin-bottom: 1rem;
  }

  #map {
    height: 300px;
    width: 100%;
    border-radius: 12px;
    margin-top: 1rem;
    box-shadow: 0 4px 14px rgba(0,0,0,0.08);
  }

  h3, h4 {
    font-weight: 600;
    margin-bottom: 1rem;
    color: #212529;
  }

  hr {
    border-top: 1px solid #dee2e6;
    margin: 1.5rem 0;
  }

  .review-form textarea {
    min-height: 100px;
  }
</style>

<div class="container mt-4">
  <!-- Listing Title -->
  <div class="row">
    <div class="col-12 text-center mb-3">
      <h3><%= listing.title %></h3>
    </div>
  </div>

  <!-- Listing Card -->
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card show-card">
        <img src="<%= listing.image.url %>" alt="Listing Image" class="card-img-top show-img">

        <div class="card-body">
          <p><strong>Owned by:</strong> <i><%= listing.owner ? listing.owner.username : "Unknown" %></i></p>
          <p><strong>Description:</strong> <%= listing.description %></p>
          <p><strong>Price:</strong> ₹<%= listing.price.toLocaleString("en-IN") %> / night</p>
          <p><strong>Location:</strong> <%= listing.location %>, <%= listing.country %></p>
        </div>
      </div>

      <!-- Edit/Delete Buttons -->
      <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="mt-3 d-flex justify-content-start">
          <a href="/listings/<%= listing._id %>/edit" class="edit-btn btn btn-dark">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark">Delete</button>
          </form>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Reviews Section -->
  <div class="row justify-content-center mt-5">
    <div class="col-md-8">
      <% if (currUser) { %>
        <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation review-form" novalidate>
          <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-slot">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
              <input type="radio" id="rate1" name="review[rating]" value="1" />
              <label for="rate1" title="Terrible">1 star</label>
              <input type="radio" id="rate2" name="review[rating]" value="2" />
              <label for="rate2" title="Not good">2 stars</label>
              <input type="radio" id="rate3" name="review[rating]" value="3" />
              <label for="rate3" title="Average">3 stars</label>
              <input type="radio" id="rate4" name="review[rating]" value="4" />
              <label for="rate4" title="Very good">4 stars</label>
              <input type="radio" id="rate5" name="review[rating]" value="5" />
              <label for="rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>

          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
            <div class="invalid-feedback">Please add a comment.</div>
          </div>

          <button type="submit" class="btn btn-outline-dark">Submit Review</button>
        </form>
        <hr>
      <% } %>

      <!-- Display Reviews -->
      <% if (listing.reviews && listing.reviews.length > 0) { %>
        <h4>All Reviews</h4>
        <div class="row">
          <% for (let review of listing.reviews) { %>
            <div class="col-md-6">
              <div class="card review-card p-2">
                <div class="card-body">
                  <h5 class="card-title">@<%= review.author.username %></h5>
                  <p class="card-text">Rating: <%= review.rating %> ⭐</p>
                  <p class="card-text"><%= review.comment %></p>
                  <% if(currUser && review.author._id.equals(currUser._id)) { %>
                    <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                      <button class="btn btn-sm btn-dark mt-2">Delete</button>
                    </form>
                  <% } %>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      <% } %>

      <!-- Map -->
      <div class="mt-5">
        <h4>Where you'll be</h4>
        <div id="map"></div>
      </div>
    </div>
  </div>
</div>

<script>
  // Bootstrap validation
  (function () {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>
