<style>
  /* --- Navbar Styling --- */
  .navbar {
    background-color: #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    font-size: 1rem;
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .navbar-brand {
    color: #fe424d !important;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .navbar-brand i {
    font-size: 1.8rem;
  }

  .nav-link {
    color: #333 !important;
    margin: 0 0.5rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: #fe424d !important;
  }

  /* --- Search Bar --- */
  .search-bar {
    position: relative;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.6rem 3rem 0.6rem 3rem;
    font-size: 0.95rem;
    text-align: center;
    border: 1px solid #ddd;
    box-shadow: 0 1px 2px rgba(0,0,0,0.05);
    transition: all 0.2s ease;
  }

  .search-inp:focus {
    border-color: #fe424d;
    box-shadow: 0 0 4px rgba(254, 66, 77, 0.5);
    outline: none;
  }

  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 50%;
    width: 50px;
    height: 42px;
    border: none;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 0.5rem;
    transition: all 0.3s ease;
  }

  .search-btn:hover {
    background-color: #ec4956;
    transform: scale(1.05);
  }

  .search-btn i {
    font-size: 1.2rem;
    color: #fff;
  }

  /* --- Responsive Tweaks --- */
  @media (max-width: 768px) {
    .search-inp {
      width: 100%;
      text-align: left;
      padding-left: 2.5rem;
    }

    .search-btn {
      border-radius: 25px;
      width: auto;
      padding: 0 1rem;
    }
  }
</style>

<nav class="navbar navbar-expand-md sticky-top">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <i class="fa-solid fa-compass-drafting me-2"></i> StayFinder
    </a>

    <!-- Mobile Toggler -->
    <button 
      class="navbar-toggler" 
      type="button" 
      data-bs-toggle="collapse" 
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Links -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav me-auto">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Search -->
      <form class="d-flex search-bar mx-auto my-2" role="search" style="max-width: 350px;">
        <input
          class="form-control search-inp"
          type="search"
          placeholder="Search destinations"
          aria-label="Search"
        />
        <button class="search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>

      <!-- Right Side Links -->
      <div class="navbar-nav ms-auto align-items-center">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>

        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } else { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
